<% if(success && success.length){ %>
  <br>
  <div class="alert alert-success alert-dismissible fade show d-flex align-items-center shadow-sm border-0 rounded-3 p-3 col-6 offset-3"
       role="alert">

      <!-- Icon -->
      <i class="bi bi-check-circle-fill me-2 fs-5"></i>

      <!-- Message -->
      <div>
          <%= success %>
      </div>

      <!-- Close Button -->
      <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <br>
  <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center shadow-sm border-0 rounded-3 p-3 col-6 offset-3"
       role="alert">

      <!-- Icon -->
      <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>

      <!-- Message -->
      <div>
          <%= error %>
      </div>

      <!-- Close Button -->
      <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
